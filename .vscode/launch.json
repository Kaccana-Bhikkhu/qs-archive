    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "AllSheets",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/QSArchive.py",
            "args": [
                "All",
                "-vvv",
                "--sheets",
                "All"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "AllEvents",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/QSArchive.py",
            "args": [
                "All",
                "-vvv"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "ParseCSV",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/QSArchive.py",
