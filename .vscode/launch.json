        },
        {
            "name": "QuickBuild",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/QSArchive.py",
            "args": [
                "DownloadCSV,SplitMp3,Build",
                "--buildOnly",
                "events",
                "--linkCheckLevel",
